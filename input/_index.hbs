    <div id="content">
        <div class="row">
            <div class="8u 12u$(medium)">
                {{#each posts}}
                <div>
                    <a href="{{link}}">
                        <h2>{{title}}</h2>
                    </a>
                    <p>Posted on {{date}}</p>
                    <p>{{{excerpt}}}</p>
                </div>
                {{/each}}
            </div>
            <div class="4u 12u$(medium) text-right">
                <a href="/posts/index.html" class="action button">Archive &rarr;</a>
            </div>
        </div>
    </div>